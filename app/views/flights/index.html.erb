<h1>Listing flights</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Capacity</th>
    <th>Duration</th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%=h flight.name %></td>
    <td><%=h flight.capacity %></td>
    <td><%=h flight.duration %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New flight', new_flight_path %>